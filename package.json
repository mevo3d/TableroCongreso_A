{
  "name": "sistema-votacion-congreso",
  "version": "1.0.0",
  "description": "Sistema de votación legislativa y análisis de documentos del Congreso de Morelos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "streaming": "node start-streaming.js",
    "start:all": "concurrently \"npm start\" \"npm run streaming\"",
    "analizar-orden": "node analizarOrdenDelDia.js",
    "test-pdf": "node test-pdf-orden.js",
    "install:ffmpeg": "npm install ffmpeg-static",
    "electron": "electron .",
    "electron-dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --win",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "cross-env NODE_ENV=test jest tests/performance",
    "test:security": "cross-env NODE_ENV=test jest tests/security",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:setup": "node tests/setup/setupTestDatabase.js",
    "test:teardown": "node tests/setup/teardownTestDatabase.js",
    "test:run-all": "node run-all-tests.js",
    "test:run-all:verbose": "node run-all-tests.js --verbose",
    "test:run-all:reports": "node run-all-tests.js --reports --verbose"
  },
  "keywords": [
    "votacion",
    "legislativo",
    "congreso",
    "morelos",
    "analisis-pdf"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.0.3",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mammoth": "^1.10.0",
    "mediasoup": "^3.18.0",
    "mediasoup-client": "^3.14.0",
    "multer": "^1.4.5-lts.1",
    "node-media-server": "^4.0.20",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.1",
    "sharp": "^0.34.3",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "fs-extra": "^11.1.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
}
